if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

if [ -f ~/.bash_profile_ext ]; then
    . ~/.bash_profile_ext
fi

export LANG=ja_JP.UTF-8
export TERM='xterm-256color'
export COLORTERM='gnome-terminal'
export EDITOR=vim

alias swpsearch='find . -name ".*.sw*"'
alias findswp="find . -name '.*.sw*'"
alias tmux='tmux -2'
alias ls='ls -aG'
alias l='ls -aG'
alias ll='ls -alG'
alias grep='grep --color'
alias diff='diff -u'
alias diff-nospace='diff -BbwE'
alias shell_restart='eval "$(rbenv init -)"'

# aws
echo 'complete -C aws_completer aws'

# # for ubuntu

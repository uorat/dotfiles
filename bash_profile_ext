export LANG=ja_JP.UTF-8
export TERM='xterm-256color'
export COLORTERM='gnome-terminal'
export EDITOR=vim

alias swpsearch='find . -name ".*.sw*"'
alias findswp="find . -name '.*.sw*'"
alias tmux='tmux -2'
alias ls='ls -aG'
alias l='ls -aG'
alias ll='ls -alG'
alias grep='grep --color'
alias diff='diff -u'
alias diff-nospace='diff -BbwE'
alias shell_restart='exec $SHELL -l'

# completion for mac
if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# aws
complete -C aws_completer aws

# # for ubuntu
# alias pbcopy='xsel --clipboard --input'
# alias pbpaste='xsel --clipboard --output'

# for rvm
# export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting
# [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
alias init_rvm='export PATH="$PATH:$HOME/.rvm/bin" && [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"'

# for rbenv
# export PATH="$HOME/.rbenv/bin:$PATH"
# eval "$(rbenv init -)"
alias init_rbenv='export PATH="$HOME/.rbenv/bin:$PATH" && eval "$(rbenv init -)"'
